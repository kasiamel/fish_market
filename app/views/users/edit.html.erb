<h1>User settings</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">

    <%= form_for(@user) do |f| %>

       <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control"%>
        </div>

          <%= f.submit "Change password", class: "btn btn-success btn-block"  %>

    <% end %>

  </div>
</div>